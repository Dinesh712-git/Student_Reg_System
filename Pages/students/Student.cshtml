@page
@model StudentReg.Pages.students.StudentModel
@{
}
<br>
<h2>List of Students</h2>
<a class='btn btn-primary btn-sm' href='/students/Addstudents'>Add Student</a>
 <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>DOB</th>
                <th>Subject</th>
                <th>National ID</th>
                <th>Mobile</th>
                <th>Email</th>
                 <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach(var item in Model.stulist)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.fname</td>
                <td>@item.lname</td>
                <td>@item.dob</td>
                <td>@item.subject</td>
                <td>@item.nic</td>
                <td>@item.mobile</td>
                <td>@item.email</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/students/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/students/Delete?id=@item.id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>